<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="actionMenuTextColor">@color/green</item>
        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="textInputStyle">@style/FormInput</item>
    </style>

    <style name="Theme.Light" parent="Theme.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primaryColor</item>
        <item name="colorPrimaryVariant">@color/light_primaryVariant</item>
        <item name="colorOnPrimary">@color/light_onPrimaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_secondaryColor</item>
        <item name="colorSecondaryVariant">@color/light_secondaryVariant</item>
        <item name="colorOnSecondary">@color/light_onSecondaryColor</item>
        <!-- UI colors -->
        <item name="android:colorBackground">@color/light_backgroundColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/dark_secondaryColor</item>
        <!-- <item name="colorAccent">@color/gray</item> -->
        <item name="colorOnSurface">@color/light_onSecondaryColor</item>
    </style>

    <style name="Theme.Dark" parent="Theme.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primaryColor</item>
        <item name="colorPrimaryVariant">@color/dark_primaryVariant</item>
        <item name="colorOnPrimary">@color/dark_onPrimaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_secondaryColor</item>
        <item name="colorSecondaryVariant">@color/dark_secondaryVariant</item>
        <item name="colorOnSecondary">@color/dark_onSecondaryColor</item>
        <!-- UI colors -->
        <item name="android:colorBackground">@color/dark_backgroundColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/dark_secondaryColor</item>
        <!-- <item name="colorAccent">@color/lightGray</item> -->
        <item name="colorOnSurface">@color/dark_onSecondaryColor</item>
    </style>

    <style name="Theme.Drakula" parent="Theme.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primaryColor</item>
        <item name="colorPrimaryVariant">@color/dark_primaryVariant</item>
        <item name="colorOnPrimary">@color/dark_onPrimaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_secondaryColor</item>
        <item name="colorSecondaryVariant">@color/dark_secondaryVariant</item>
        <item name="colorOnSecondary">@color/dark_onSecondaryColor</item>
        <!-- UI colors -->
        <item name="android:colorBackground">@color/dark_backgroundColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/dark_secondaryColor</item>
        <item name="colorOnSurface">@color/dark_onSecondaryColor</item>
    </style>

<!-- Elements theme -->
    <style name="FormInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="drawableTint">?attr/colorOnPrimary</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="maxLines">1</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="boxStrokeColor">?attr/colorSecondary</item>
        <item name="passwordToggleTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <style name="AdjustTitle" parent="Widget.MaterialComponents.TextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AdjustTitleBedu" parent="Widget.MaterialComponents.TextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">?android:colorBackground</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="MaterialButtonUniformStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="IconStyle">
        <item name="android:tint">?attr/colorAccent</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">?attr/colorSecondary</item>
    </style>

    <style name="BottonNavigationStyle">
        <item name="itemTextColor">@color/menu_item_color</item>
        <item name="itemIconTint">@color/menu_item_color</item>
        <item name="itemRippleColor">?attr/colorSecondary</item>
    </style>

    <style name="BorderlessButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="ShapeAppearanceOverlay.BeduCompras.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_corners</item>
    </style>

    <style name="textViewBlack">

    </style>
    <style name="Theme.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!---Spinner-->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
